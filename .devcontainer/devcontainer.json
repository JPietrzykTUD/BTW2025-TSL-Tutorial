{
    "name": "TSL Tutorial - BTW 2025",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "dev",
    "postCreateCommand": "echo 'Setup Complete.'",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-vscode.cpptools",
          "ms-python.python",
          "ms-azuretools.vscode-docker",
          "microsoft.simple-browser",
          "ms-vscode.cmake-tools",
          "ms-vscode.cpptools-extension-pack",
          "DBTUD.tslgen-edit"
        ],
        "keybindings": [
          {
            "key": "ctrl+shift+o",
            "command": "simpleBrowser.show",
            "args": ["https://db-tu-dresden.github.io/TSL/"]
          }
        ]
      }
    },
    "postStartCommand": "/bin/bash ./scripts/setup_hooks.sh && sudo /bin/bash ./scripts/setup_tsl.sh",
    "postAttachCommand": "code 3rdparty/tslgen/primitive_data/primitives/calc.yaml"
}